{extends @layout.latte}

<div n:block="body" class="single">
	{include page-navbar}

	<div class="page-header">
		<h1>{include page-title}</h1>

		<div class="page-header__subtitle">
			<span>Aktualita</span>
			<span>{$Post|wp_date|wp_cz_date_format}</span>
			<span title="Autor">{$Post|wp_author}</span>
		</div>
	</div>

	<div class="page-content">
		<div class="text-container">
			{include "shared/post-body.latte", post => $Post}
		</div>
	</div>
</div>
