{
	"name": "mangopress",
	"scripts": {
		"start": "concurrently \"npm run dev\" \"npm run serve\"",
		"dev": "mango dev",
		"build": "mango build",
		"serve": "php -S 0.0.0.0:8000 -t public",
		"prettier": "prettier --write \"theme/scripts/**/*.{js,jsx,ts,tsx}\"",
		"upgrade-interactive": "npm-check --update",
		"build-styles": "node-sass --importer=node_modules/node-sass-tilde-importer theme/styles/index.scss public/assets/styles/index.css",
    "watch-styles": "node-sass --importer=node_modules/node-sass-tilde-importer --output-style expanded --source-map true --source-map-contents true --precision 6 --watch theme/styles/index.scss public/assets/styles/index.css"
	},
	"dependencies": {
		"@mangoweb/sass-base": "^0.0.5",
		"@mangoweb/scripts-base": "0.0.9",
		"@types/jquery": "^3.3.30",
		"@types/lodash-es": "^4.17.3",
		"@types/react": "^16.8.23",
		"@types/react-dom": "^16.8.4",
		"bootstrap": "^4.3.1",
		"jquery": "^3.4.0",
		"lodash-es": "^4.17.14",
		"lt-ie-9": "^0.1.2",
		"nette-forms": "^3.0.2",
		"normalize-scss": "^7.0.1",
		"npm-check": "^5.9.0",
		"react": "^16.8.6",
		"react-dom": "^16.8.6"
	},
	"devDependencies": {
		"concurrently": "^4.1.1",
		"node-sass": "^4.13.0",
		"node-sass-tilde-importer": "^1.0.2",
		"prettier": "^1.18.2",
		"typescript": "^3.5.3"
	}
}
